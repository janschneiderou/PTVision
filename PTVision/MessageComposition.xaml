                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.ToolTip>
                <ToolTip>
                    <TextBlock Text="Return to main menu"/>
                </ToolTip>
            </Button.ToolTip>
            <Image Name="IntroImg" Source="Images/btn_intro.png" />
        </Button>


        <Button Name="Middle_btn" Click="Middle_btn_Click"  HorizontalAlignment="Center" Margin="-140,59,0,0" MouseEnter="Middle_btn_MouseEnter" MouseLeave="Middle_btn_MouseLeave" VerticalAlignment="Top" Height="44" Width="68" >
