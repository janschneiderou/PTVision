        <Button Name="after_btn" Click="after_btn_Click" HorizontalAlignment="Left" Margin="782,59,0,0" MouseEnter="after_btn_MouseEnter"  MouseLeave="after_btn_MouseLeave" VerticalAlignment="Top" Height="44" Width="68">
