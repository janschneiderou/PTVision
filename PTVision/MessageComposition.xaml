<UserControl x:Class="PTVision.MessageComposition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PTVision"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">
    <Grid x:Name="mainGrid" Width="1100" Height="800" >
        <Image Name="imgFrame" Source="Images/container3.png" Stretch="Fill" />

        <Button Name="Before_btn" Click="Before_btn_Click" MouseEnter="Before_btn_MouseEnter"  MouseLeave="Before_btn_MouseLeave" HorizontalAlignment="Left" Margin="115,59,0,0" VerticalAlignment="Top" Height="44" Width="69">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="Transparent"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.ToolTip>
                <ToolTip>
                    <TextBlock Text="Return to main menu"/>
                </ToolTip>
            </Button.ToolTip>
            <Image Name="BeforeImg" Source="Images/btn_before.png"  />
        </Button>


        <Button Name="Intro_btn" Click="Intro_btn_Click"  HorizontalAlignment="Left" Margin="278,59,0,0" MouseEnter="Intro_btn_MouseEnter" MouseLeave="Intro_btn_MouseLeave" VerticalAlignment="Top" Height="44" Width="69">
