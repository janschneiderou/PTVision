<UserControl x:Class="PTVision.FeedbackObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:local="clr-namespace:PTVision"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="450">
    <Grid>
        <Image x:Name="parrotImg" HorizontalAlignment="Left" Height="121"  gif:ImageBehavior.AnimatedSource="/Images/parrot.png"  VerticalAlignment="Top" Width="153" Margin="-18,0,0,0" />
        <Image x:Name="speechBubble" HorizontalAlignment="Left" Height="90"  Stretch="Fill" Source="/Images/speechBubble.png" VerticalAlignment="Top" Width="384" Margin="66,0,0,0" />
        <Label Name="FeedbackLabel" Visibility="Visible" Background="Transparent" Content="HERE is the FEEDBACK!!!"  Foreground="Red" Height="63" Width="360" Margin="90,7,0,0" FontSize="35" VerticalAlignment="Top" HorizontalContentAlignment="Center" />

    </Grid>
</UserControl>
